<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<GridLayout
    android:id="@+id/drig"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:rowCount="3"
    android:columnCount="2">
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="help"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text=""
        android:textAlignment="center"/>
    <Button
        android:id="@+id/welcome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:contentDescription="help"
        android:text="Edit Login Detail"
        android:onClick="editcreds"
        android:textAlignment="center"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="help"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="View/Delete Your Guest Data"
        android:onClick="viewgu"
        android:textAlignment="center"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="help"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="createve"
        android:text="Create Event"
        android:textAlignment="center"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="help"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="vieweve"
        android:text="Manage Event Details"
        android:textAlignment="center"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="help"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="Add Guest To Event"
        android:onClick="addgu"
        android:textAlignment="center"/>

</GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>